<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="easydel.gonew.mapper.titles">
	<select id="selectAllTitles" resultType="Title">
		select		*
		from		TITLES
	</select>
	<select id="selectAllTitlesInPage" parameterType="Integer" resultType="Title">
		select		*
		from		(
						select		ROWNUM as RNUM, T.*
						from		titles T
						where		(({#pageNum} - 1) * 10) + 1 &lt;= RNUM
					)
		where		{#pageNum} * 10 >= RNUM  
	</select>
